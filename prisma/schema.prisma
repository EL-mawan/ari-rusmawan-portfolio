generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  role      String   @default("user")
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  profile   Profile?
  messages  Message[]
  
  @@map("users")
}

model Profile {
  id           String   @id @default(cuid())
  userId       String   @unique
  fullName     String   @map("full_name")
  title        String
  bio          String?
  location     String?
  phone        String?
  emailPublic  String?  @map("email_public")
  cvPath       String?  @map("cv_path")
  profileImage String?  @map("profile_image")
  socialLinks  String?  @map("social_links") // JSON string
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Relations
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  education    Education[]
  experiences  Experience[]
  projects     Project[]
  testimonials Testimonial[]
  
  @@map("profiles")
}

model Education {
  id          String   @id @default(cuid())
  profileId   String   @map("profile_id")
  school      String
  degree      String
  major       String?
  startYear   Int      @map("start_year")
  endYear     Int      @map("end_year")
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  @@map("education")
}

model Experience {
  id             String   @id @default(cuid())
  profileId      String   @map("profile_id")
  company        String
  position       String
  startDate      DateTime @map("start_date")
  endDate        DateTime? @map("end_date")
  location       String?
  responsibilities String? @map("responsibilities") // JSON string
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  // Relations
  profile        Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  @@map("experiences")
}

model Skill {
  id           String   @id @default(cuid())
  name         String   @unique
  category     String
  levelPercent Int      @map("level_percent")
  icon         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@map("skills")
}

model Project {
  id          String   @id @default(cuid())
  profileId   String   @map("profile_id")
  title       String
  slug        String   @unique
  description String
  images      String?  // JSON string
  techStack   String?  @map("tech_stack") // JSON string
  liveUrl     String?  @map("live_url")
  repoUrl     String?  @map("repo_url")
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  @@map("projects")
}

model Testimonial {
  id        String   @id @default(cuid())
  profileId String   @map("profile_id")
  name      String
  role      String?
  company   String?
  content   String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  @@map("testimonials")
}

model Message {
  id          String   @id @default(cuid())
  name        String
  email       String
  subject     String
  message     String
  isRead      Boolean  @default(false) @map("is_read")
  answeredBy  String?  @map("answered_by")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  user        User?    @relation(fields: [answeredBy], references: [id])
  
  @@map("messages")
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String?  // JSON string for complex values
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("settings")
}